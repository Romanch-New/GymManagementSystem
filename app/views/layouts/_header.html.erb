<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<nav>
  <% if user_signed_in? %>
    Logged in as personal account <strong><%= current_user.email %></strong>.
    <%= link_to "Edit profile", edit_user_registration_path, class: "navbar-link" %> |
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-link"  %>
  <% elsif admin_signed_in? %>
    <p>Logged in as admin account<%= current_admin.email %> (<%= current_admin.name %>)</p>
    <%= button_to "Logout", destroy_admin_session_path, method: :delete, data: {confirm: "Are you sure"} %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, class: "navbar-link"  %> |
    <%= link_to "Login", new_user_session_path, class: "navbar-link"  %>
  <% end %>
</nav>